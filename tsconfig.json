{
    "compilerOptions": {
        "outDir": "./build/",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es2020",
        "allowJs": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@Framework/*": ["framework/*"]
        }
    },
    "include": [
        "src/framework/**/*"
    ],
    "exclude": [
        "dist",
        "__tests__",
        "samples"
    ],
}